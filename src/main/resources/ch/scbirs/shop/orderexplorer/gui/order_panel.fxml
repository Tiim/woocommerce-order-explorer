<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
            AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
            AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/8.0.121"
            fx:controller="ch.scbirs.shop.orderexplorer.gui.OrderPanelController">
    <top>
        <GridPane maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label fx:id="firstName" styleClass="bold" text="Name" GridPane.columnSpan="2"
                       GridPane.halignment="CENTER"/>
                <Label fx:id="status" text="Status" GridPane.halignment="CENTER" GridPane.rowIndex="2"/>
                <Label fx:id="total" styleClass="price" text="Total" GridPane.columnIndex="1"
                       GridPane.halignment="CENTER" GridPane.rowIndex="2"/>
                <Label fx:id="email" styleClass="email" text="Email" GridPane.columnSpan="2"
                       GridPane.halignment="CENTER" GridPane.rowIndex="1"/>
            </children>
        </GridPane>
    </top>
    <center>
        <ListView fx:id="list" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                  BorderPane.alignment="CENTER"/>
    </center>
</BorderPane>
