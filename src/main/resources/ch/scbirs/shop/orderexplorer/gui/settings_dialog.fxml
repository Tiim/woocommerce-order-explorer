<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" hgap="20.0" vgap="10.0" xmlns="http://javafx.com/javafx/8.0.121">
    <columnConstraints>
        <ColumnConstraints halignment="RIGHT" hgrow="NEVER" minWidth="10.0"/>
        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER"/>
    </rowConstraints>
    <children>
        <Label text="Host"/>
        <TextField fx:id="host" prefWidth="300.0" promptText="host.example.com" GridPane.columnIndex="1"/>
        <Label text="Consumer Key" GridPane.rowIndex="1"/>
        <TextField fx:id="key" prefWidth="300.0" promptText="ck_xxxxxxxxxxxxxxxx" GridPane.columnIndex="1"
                   GridPane.rowIndex="1"/>
        <Label text="Consumer Secret" GridPane.rowIndex="2"/>
        <TextField fx:id="secret" prefWidth="300.0" promptText="cs_xxxxxxxxxxxxxxxx" GridPane.columnIndex="1"
                   GridPane.rowIndex="2"/>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
</GridPane>
